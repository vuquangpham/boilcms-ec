<form method="post" action="?type=sign-in&method=post">

    <div class="form-fields">

        <!-- email -->
        <div class="field">
            <label for="email">Email:</label>
            <input id="email" type="email" name="email" placeholder="Email" required>
        </div>

        <!-- password -->
        <div class="field">
            <label for="password">Password:</label>
            <input id="password" type="password" name="password" placeholder="Password" required>
        </div>

        <!-- Forgot password -->
        <div class="field txt_14px">
            <a href="/register?type=forget-password">Forgot password?</a>
        </div>

        <!-- Button -->
        <div class="field">
            <button type="submit" class="btn_primary w100">Sign In</button>
        </div>

        <!-- Sign up -->
        <div class="field txt_14px ta-center">
            <span>Don't have a CMS account yet? <a href="/register?type=sign-up">Sign up!</a></span>
        </div>

    </div>

</form>